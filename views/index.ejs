<!DOCTYPE html>
<html>
<head>
  <% include ../partials/head.ejs %>
  <title>Humans of Bloomington</title>
</head>
<body>
  <div class="wrapper">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <ul class="nav navbar-nav navbar-right">
        <% if (user) { %>
          <li><a href="/humansofbloomington/new">Create New Profile</a></li>
          <p class="navbar-text navbar-right">Welcome, <%= user %>!</p>
          <form class="navbar-form navbar-right logger" role="logout" action="/humansofbloomington/session/logout?_method=DELETE" method="POST">
              <input class="btn btn-default" type="submit" value="Logout">
          </form>
        <% } else { %>
            <li><a href="/humansofbloomington/session/login">Login</a></li>
            <li><a href="/humansofbloomington/session/register">Register</a></li>
        <% } %>
        </ul>
      </div>
    </nav>
    <header>
      <h1>HUMANS OF BLOOMINGTON</h1>
    </header>
    <div class="container">
      <% for (let human of allHumans) { %>
        <div class="row">
          <div class="col">
            <div class="view"><a href="/humansofbloomington/<%= human.id %>"><img class="img-responsive hover-over" src="<%= human.image %>"></a>
            </div>
          </div>
        </div>
        <% } %>
      </div>
      <div class="push"></div>
    </div>
    <footer class="footer">
      <% include ../partials/footer.ejs %>
    </footer>
  </body>
  </html>
